.loveItem{
  width: 340rpx;
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.loveItem .avatar{
  width: 320rpx;
  height: 300rpx;
}
.name{
  font-size: 36rpx;
  line-height: 50rpx;
  text-align: center;
}
.is_auth{
  text-align: center;
  color: #fa8d00;
  font-size: 26rpx;
}
.is_auth image{
  width: 22rpx;
  height: 22rpx;
}
.infoWrap{
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}
.info{
  width: 140rpx;
  background: #f5f5f5;
