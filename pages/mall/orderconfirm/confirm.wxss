/* pages/order/confirm.wxss */
page{
    height:100%;
  }
  .container{
    padding-bottom:100rpx;
  }
  .scroll-box{
    width:100%;
    overflow: scroll;
  }
  
  .block .block-head{
    padding:20rpx;
    line-height:38rpx;
      font-size: 24rpx;
    /* font-weight:bold; */
    /* border-bottom:1rpx #e8e8e8 solid; */
  }
  .pro-itemlist{
      background:#fff;
      margin-top:20rpx;
  }
  .pro-itemlist .pro-item{
    padding:20rpx;
    display:flex;
    flex-direction: row;
      border-bottom:1px solid #eee;
  }
  .pro-itemlist .pro-item:last-child{
      border-bottom:0;
  }
  .pro-item .picture{width:150rpx;height:150rpx;margin-left:20rpx;}
  .pro-item .pro-info{flex:1;display:flex;flex-direction: column;margin:0 20rpx;}
  .pro-itembox .pro-price{
    color:#101010;
    font-size: 28rpx;
      display: flex;
      justify-content: space-between;
      align-items: center;
  }
  .pro-info .pro-price .float_right::first-letter{font-size:20rpx;}
  
  .input-group{display:flex;flex-direction:row;margin-right:20rpx;}
  .input-group input{flex:1;border-top:1rpx #e8e8e8 solid;border-bottom:1rpx #e8e8e8 solid;width:100rpx;margin:0;min-height:10rpx;line-height:40rpx;height:40rpx;text-align: center;}
  .input-group .input-group-addon{width:40rpx;height:40rpx;border:1px #e8e8e8 solid;padding:0;background:transparent;}
  .pro-info .pro-specs{color:#9b9b9b;margin-bottom:10rpx;font-size:24rpx;}
  .pro-info .pro-name{margin-bottom:10rpx;font-size:28rpx;}
  
  .extrow{display:flex;flex-direction: row;border-bottom:1rpx #e8e8e8 solid;line-height:40rpx;font-size:28rpx;height: 88rpx;align-items: center;box-sizing: border-box;background:#fff;margin-top:20rpx;}
  .extrow text{line-height:40rpx;font-size:28rpx;}
  .extrow .label{margin-left:20rpx;}
  .extrow .desc{flex:1;margin:0 20rpx;color:#9b9b9b;}
  .extrow .arrow{margin-right:30rpx;    width:30rpx;    height:40rpx;}
  .extrow .vgrey{color:#9b9b9b;}
  .extrow .icon{margin-right:20rpx;}
  .extrow number-input{margin-right:20rpx;width: 200rpx;}
  .extrow .itext{flex:1;margin:0 20rpx;min-height:10rpx;line-height:40rpx;height:40rpx;}
  .extrow .input-placeholder{line-height:40rpx;}
  
  .pro-total{
    padding:30rpx 20rpx;
  }
  .pro-total .pro-price{
    text-align: right;
  }
  
  .address-box{
    padding:30rpx 0;
      font-size:24rpx;
  }
  .address-box .add-row{
    display:flex;
    flex-direction: row;
    align-items: center;
  }
  .address-box .icon{
    width:38rpx;
    background:transparent;
  }
  .address-box .iconlocate{
    margin-left:20rpx;
    margin-top:18rpx;
  }
  .address-box .iconarr{
    width:30rpx;
    height:40rpx;
    margin-right:20rpx;
    margin-top:20rpx;
  }
  .address-box .add-info{
    width:50%;
    flex-grow: 1;
    margin-left:30rpx;
    margin-right:30rpx;
  }
  .address-box .add-info view:first-child{
      font-size: 28rpx;
  }
  .address-box .street-wraper{padding-top:10rpx;}
  .address-box .add-street{}
  .add-empty{flex:1;line-height:80rpx;text-align:center;color:#9b9b9b;}
  
  .bottom-buttons{
    width:100%;
    height:98rpx;
    background:#fff;
    border-top:1rpx #e9e9e9 solid;
    display:flex;
    flex-direction: row;
    position: fixed;
    bottom:0;
    left:0;
  }
  .bottom-buttons .pricebox{
    flex-grow: 1;
    text-align:right;
    padding-right:40rpx;
    padding-top:32rpx;
  }
  .bottom-buttons .makeorder{
    padding:0 44rpx;
    line-height:98rpx;
    background:#F4223C;
    color:#fff;
    height:98rpx;
    border-radius:0;
  }
  .bottom-buttons .makeorder:after{
      border:0;
  }
  
  .other-price{font-weight: 100;font-size: 28rpx;}
  .red_tips{
      color:#E51C23 !important;
  }